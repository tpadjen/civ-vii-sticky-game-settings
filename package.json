{
    "name": "tbq-sticky-game-settings",
    "type": "module",
    "version": "1.1.3",
    "description": "A mod to improve the game start experience in Civ VII",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tpadjen/civ-vii-sticky-game-settings.git"
    },
    "author": "Tim Padjen",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/tpadjen/civ-vii-sticky-game-settings/issues"
    },
    "homepage": "https://github.com/tpadjen/civ-vii-sticky-game-settings#readme",
    "scripts": {
        "watch": "bun ./utils/vite/watch.ts",
        "release": "release-it",
        "archive": "bun ./utils/release/create-archive.js",
        "clean:build": "rimraf build",
        "update:modinfo": "bun ./utils/modinfo/build.tsx",
        "format": "prettier --write .",
        "prepare": "husky install",
        "build:src": "vite build --config vite.config.ts",
        "build:src:watch": "vite build --config vite.config.ts --watch",
        "bundle": "bun clean:build && bun build:src && bun update:modinfo",
        "bundle:watch": "bun clean:build && bun build:src:watch"
    },
    "devDependencies": {
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-replace": "^6.0.2",
        "@types/archiver": "^6.0.3",
        "@types/bun": "latest",
        "@types/lodash": "^4.17.16",
        "@types/postcss-import": "^14.0.3",
        "@types/react": "^19.0.12",
        "@types/react-dom": "^19.0.4",
        "@types/rollup-plugin-postcss": "^3.1.4",
        "archiver": "^6.0.1",
        "autoprefixer": "^10.4.21",
        "bun": "^1.2.5",
        "chokidar": "^4.0.3",
        "glob": "^11.0.1",
        "globals": "^16.0.0",
        "globby": "^14.1.0",
        "htmlfy": "^0.6.2",
        "husky": "^8.0.0",
        "ignore": "^5.3.1",
        "jsx-xml": "^0.3.0",
        "picocolors": "^1.0.0",
        "postcss": "^8.5.3",
        "postcss-import": "^16.1.0",
        "postcss-nesting": "^13.0.1",
        "postcss-preset-env": "^10.1.5",
        "prettier": "^3.5.3",
        "prettier-plugin-organize-imports": "^4.1.0",
        "release-it": "^18.1.2",
        "rimraf": "^5.0.5",
        "rollup": "^4.35.0",
        "rollup-plugin-peer-deps-external": "^2.2.4",
        "typescript": "^5.8.2",
        "vite": "^6.2.4"
    }
}
